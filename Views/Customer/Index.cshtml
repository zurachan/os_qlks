@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    ViewData["Title"] = "Home Page";
}
@section styles{
    <link href="~/customer/css/HomeUser.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@500&display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300&display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@500&display=swap">
}

<div class="banner">
    <div class="slideshow-container">
        <div class="mySlides fade">
            <img src="~/customer/images/banner1.png" style="width:100%">
        </div>
        <div class="mySlides fade">
            <img src="~/customer/images/banner2.png" style="width:100%">
        </div>
        <div class="mySlides fade">
            <img src="~/customer/images/banner3.png" style="width:100%">
        </div>
        <div class="mySlides fade">
            <img src="~/customer/images/banner4.png" style="width:100%">
        </div>
    </div>
    <br>
    <div style="text-align:center">
        <span class="dot"></span>
        <span class="dot"></span>
        <span class="dot"></span>
        <span class="dot"></span>
    </div>
    <div class="banner-text">
        <h1>NATCY HOTEL</h1>
    </div>
    <div class="banner-cover">
        <div class="banner-calendars">
            <form method="get">
                <div class="banner-calendars-item">
                    <div class="glyphicon">
                        <span class="material-symbols-outlined" style="color:#EFC75E;">
                            calendar_today
                        </span>
                    </div>
                    <div class="glyphicon">
                        <input type="date" placeholder="Ngày đặt" class="date">
                    </div>
                    <div class="glyphicon">
                        <span class="material-symbols-outlined" style="color:#8e6a0d;">
                            sync_alt
                        </span>
                    </div>
                    <div class="glyphicon">
                        <span class="material-symbols-outlined" style="color:#EFC75E;">
                            calendar_today
                        </span>
                    </div>
                    <div class="glyphicon">
                        <input type="date" placeholder="Ngày trả" class="date">
                    </div>
                    <div class="glyphicon">
                        <span class="material-symbols-outlined" style="color:#EFC75E;">
                            person
                        </span>
                    </div>
                    <div class="glyphicon">
                        <a asp-controller="Customer" asp-action="ListRoom" class="button-calendar">Tìm phòng</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="wrapper">
    <div class="section-intro">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 ">
                    <div class="section-intro-content">
                        <div class="section-intro-title">DISCOVER THE LEGEND</div>
                        <div class="section-intro-intro">Creating A Meaningful Journey With Us</div>
                        <div class="section-intro-desc">Welcome to 5-star luxury and dedicated service at Natcy. Modern design with classic royal style will bring a magnificent experience for those people who have a passion for travel. Let’s awaken your spirit. Create a whole new lifestyle with our service; from the most comfortable room to a sumptuous feast. Its extensive gastronomic offerings feature several restaurants and bars; and super wellness facilities, complemented by the magnificent view of Ho Chi Minh city. Everything is accompanied by the urban and cosmopolitan spirit.</div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="section-intro-img">
                        <img src="~/customer/images/view.png" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="section-image">
        <img src="images/home_section_image.jpg" alt="">
    </div>
    <div class="section-title">
        <div class="section-title-discover">Khám phá</div>
        <div class="section-title-introduce">Điểm đến của không gian sang trọng</div>
    </div>
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="section-1-content">
                        <div class="section-1-content-title">Một Kỳ Nghỉ Thú Vị</div>
                        <div class="section-1-content-description">Natcy Hotel - khách sạn với thiết kế mang tính biểu tượng cùng 280 phòng bao gồm phòng tiêu chuẩn, phòng suite, phòng tổng thống. Màu sắc nhẹ nhàng, nội thất sang trọng trong mỗi phòng tạo nên một không gian thư giãn tuyệt vời cho du khách sau một ngày khám phá thành phố cùng nhịp sống sôi động nơi đây.</div>
                        <div class="section-1-content-action">
                            <a asp-controller="Customer" asp-action="PhongSuites">Xem thêm</a>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="section-1-image">
                        <img src="~/customer/images/home_section_1.jpg">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="section-2-image">
                        <img src="~/customer/images/home_section_2.jpg">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="section-2-content">
                        <div class="section-2-content-title">Những Hương Vị Tinh Tế</div>
                        <div class="section-2-content-discription">Sự sáng tạo trong hành trình ẩm thực với thực đơn phong phú từ khắp mọi nơi trên thế giới cùng nét chấm phá đặc biệt với hương vị truyền thống. Dù là bữa tiệc như thế nào đi nữa, các đầu bếp tài năng của chúng tôi sẽ mang đến cho quý khách những món ăn hảo hạng nhất.</div>
                        <div class="section-2-content-action">
                            <a asp-controller="Customer" asp-action="NhaHang">Xem thêm</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="section-1-content">
                    <div class="section-1-content-title">Thư Giãn Cơ Thể Và Tâm Hồn</div>
                    <div class="section-1-content-description">Không gì tuyệt vời hơn khi để tâm trí và cơ thể của bạn thư giãn tuyệt đối sau một ngày dài hoạt động năng suất. Hãy ngồi lại, cảm nhận và nuôi nấng năng lượng tích cực từ bên trong cùng những hoạt động nâng cao thể chất và tinh thần với các thiết bị hiện đại, phương pháp chăm sóc sức khỏe.</div>
                    <div class="section-1-content-action">
                        <a asp-controller="Customer" asp-action="TienNghi">Xem thêm</a>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="section-1-image">
                    <img src="~/customer/images/home_section_3.jpg">
                </div>
            </div>
        </div>
    </div>
</div>
<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="section-2-image">
                    <img src="~/customer/images/home_section_4.jpg">
                </div>
            </div>
            <div class="col-sm-6">
                <div class="section-2-content">
                    <div class="section-2-content-title">Những Khoảnh Khắc Quyến Rũ</div>
                    <div class="section-2-content-discription">Cho dù là một bữa tiệc sang trọng, một buổi hội thảo, một bữa tiệc cocktail thân mật hay một đám cưới long trọng, chúng tôi luôn có giải pháp cho mọi sự kiện. Cùng đội ngũ nhân viên giàu kinh nghiệm chúng tôi sẽ luôn đồng hành và hỗ trợ để mang đến những trải nghiệm đáng nhớ nhất . Natcy Hotel - địa điểm lý tưởng cho các cuộc họp mặt.</div>
                    <div class="section-2-content-action">
                        <a asp-controller="Customer" asp-action="HoiNghi">Xem thêm</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="section-special">
    <div class="container">
        <div class="section-special-title">SPECIAL OFFERS</div>
        <div class="section-special-list">
            <div class="row">
                <div class="col-sm-4">
                    <div class="section-special-item">
                        <div class="section-special-image">
                            <a href="#">
                                <img alt="" src="~/customer/images/bia.jpg">
                            </a>
                        </div>
                        <div class="section-special-content">
                            <div class="section-spacial-title">
                                <a href="#">
                                    MUA 2 TẶNG 1
                                </a>
                            </div>
                            <div class="section-special-discription">
                                <p>MUA 2 TẶNG 1 CÁC LOẠI BIA MÙA HÈ NĂM 2023!</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="section-special-item">
                        <div class="section-special-image">
                            <a href="#">
                                <img alt="" src="~/customer/images/trachieu.jpg">
                            </a>
                        </div>
                        <div class="section-special-content">
                            <div class="section-spacial-title">
                                <a href="#">
                                    TRÀ CHIỀU PHONG CÁCH
                                </a>
                            </div>
                            <div class="section-special-discription">
                                <p>Đắm mình trong không gian tinh tế, sang trọng. Hãy ngồi lại, thư giãn và thưởng thức món mặn được làm thủ công của chúng tôi bên cạnh hồ bơi vô cực trong xanh.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="section-special-item">
                        <div class="section-special-image">
                            <a href="#">
                                <img alt="" src="~/customer/images/beefsteak.jpg">
                            </a>
                        </div>
                        <div class="section-special-content">
                            <div class="section-spacial-title">
                                <a href="#">
                                    STRIPLOIN BLACK ANGUS SALE 50%
                                </a>
                            </div>
                            <div class="section-special-discription">
                                <p>Trong tháng 3 này, nhà hàng Rare Steakhouse gửi đến quý khách ưu đãi hấp dẫn</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="section-animation">
    <div class="container">
        <div class="section-animation-title">
            HÃY LÀ MỘT PHẦN CỦA NATCY
        </div>
        <div class="section-animation-hashtag">
            #natcyhotel
        </div>
        <div class="section-animation-discription">
            <span class="material-symbols-outlined">
                photo_camera
            </span>
            <p>
                @*Chia sẻ những khoảnh khắc của bạn và đề cập đến @natcyhotel để tạo những kỉ niệm đẹp cùng nhau.*@
            </p>
        </div>
        <div class="section-animation-slider">
            <div id="demo" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="card-group">
                            <div class="card">
                                <img src="~/customer/images/slider1.png" alt="" class="d-block">
                            </div>
                            <div class="card">
                                <img src="~/customer/images/slider2.png" alt="" class="d-block">
                            </div>
                            <div class="card">
                                <img src="~/customer/images/slider3.png" alt="" class="d-block">
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="card-group">
                            <div class="card">
                                <img src="~/customer/images/slider4.png" alt="" class="d-block">
                            </div>
                            <div class="card">
                                <img src="~/customer/images/slider1.png" alt="" class="d-block">
                            </div>
                            <div class="card">
                                <img src="~/customer/images/slider2.png" alt="" class="d-block">
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="card-group">
                            <div class="card">
                                <img src="~/customer/images/slider3.png" alt="" class="d-block">
                            </div>
                            <div class="card">
                                <img src="~/customer/images/slider4.png" alt="" class="d-block">
                            </div>
                            <div class="card">
                                <img src="~/customer/images/slider1.png" alt="" class="d-block">
                            </div>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
